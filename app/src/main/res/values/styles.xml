<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpringTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/springColorPrimary</item>
        <item name="colorAccent">@color/springColorAccent</item>
        <item name="android:windowBackground">@color/springColorPrimary</item>
        <item name="android:colorButtonNormal">@color/springColorAccent</item>
        <item name="android:textColor">@color/springColorAccent</item>
    </style>

</resources>
